        <a href="/Home/AboutUs" rel="nofollow" class="float-start mt-2">تماس با ما</a>

    </div>
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <a class="navbar-brand" href="/">
                <img class="logo-light imageLogo" src="/Images/Site/logo.png" alt="سایت فروش کاشی" title="سایت فروش کاشی" rel="index" width="50" height="50">
                @*<img class="logo-dark" src="/Kashi_Seramic_Theme/assets/img/logo-white.png" alt="logo">*@
            </a>
            <div class="collapse navbar-collapse main-menu-wrap" id="navbarSupportedContent">
                <div class="menu-close d-lg-none">
                    <a href="javascript:void(0)"> <i class="ri-close-line"></i></a>
                </div>
                <ul class="navbar-nav ms-auto">

                    @foreach (var menu in Model.Menu)
                    {
                        if (menu.StatusInMainMenu)
                        {
                            <li class="nav-item">
                                <a href="@menu.Href" class="nav-link " title="@menu.Title" rel="follow,index">
                                    @menu.Title
                                    <i class="@menu.Icons"></i>
                                </a>

                            </li>
                        }
                     


                    }


                </ul>

                <div class="others-options  md-none">
                    <div class="header-btn">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <button type="button" class="btn style3" data-bs-toggle="modal" 
                                data-bs-target="#signIn">
                                ورود
                            </button>
                            <button type="button" class="btn style1" data-bs-toggle="modal"
                                data-bs-target="#signUp">
                                ثبت نام
                            </button>
                        }
                        else
                        {
                            string panel = User.IsInRole("Administrator") ? "پنل ادمین" : "حساب کاربری";
                            string url = User.IsInRole("Administrator") ? "/admin" : "/user/user/index";
                            <a href="@url" class="btn style1" rel="nofollow">
                                @panel
                            </a>
                            <a href="/Logout" type="button" class="btn style3">
                                خروج
                            </a>
                        }
                        <div class="dropdown d-sm-block d-lg-block  d-md-none  float-end m-0  d-flex shopping-cart" dir="rtl" style="">
                            <a title="سبدخرید" class="nav-link icon text-end " onclick="showcard()" id="showcardbutton" data-bs-toggle="dropdown" rel="nofollow" >
                                <span class="badge bg-secondary header-badge showcountcard">0</span>
