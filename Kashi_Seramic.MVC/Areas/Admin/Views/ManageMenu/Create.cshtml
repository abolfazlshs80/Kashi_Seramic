@model CreateMenuVM

@{
    ViewBag.title = " ثبت منو جدید";
    ViewBag.keywords = "آموزشکده آرایشگران,اموزشگاه آرایش,آرایشگر,نمونه کار,ام البنین صفری,بیوتی صفری,صفری,ساری,مازندران,مازندران ساری,ایران,آرایشگران ";
    ViewBag.author = "ام البنین صفری";
    ViewBag.description = "-با میدیریت صفری من  ام البنبن صفری هستم  و برند صفری بیوتی در اختیار من است آموزشگاه آرایشگری به صورت حضوری و مجازی برگزار میشود با مدرک فنی حرفه ای";
    ViewBag.robot = "noindex,nofollow";
    ViewBag.socialmedia = false;
    ViewBag.link = "https://www.omolbininsafaribeauty.com";
    ViewBag.imageurl = "https://www.omolbininsafaribeauty.com/";
    ViewBag.username = "noosignalls";
 
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" dir="rtl">
    <div class="card" dir="rtl">
        <div class="card-header">
            <h3 class="card-title">منو جدید</h3>
        </div>
        <div class="card-body pb-2 ">
            <form class="needs-validation was-validated" action="/Admin/ManageMenu/Create" method="post">
                <div class="row row-sm">

                    <div class="col-lg-12">
                        <div class="form-group">

                            <input type="text"  name="Model.Title" placeholder="دسته بندی را وارد کنید..." class="form-control mb-4 is-invalid state-invalid" required="" />
               
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" name="Model.Href" placeholder="لینک دسته بندی را وارد کنید..." class="form-control mb-4 is-invalid state-invalid" required="" />
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" name="Model.Icons" placeholder="ایکون را وارد کنید..." class="form-control mb-4 is-invalid state-invalid" required="" />
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" name="Model.ControllerName"  placeholder="نام کنترولر را وارد کنید..." class="form-control mb-4 is-invalid state-invalid" required="" />
                        </div>
                    </div>
                    <div class="col-lg-12 d-flex justify-content-start">
                        <div class="form-group">
                            @Html.LabelFor(a=>a.RoleName)
                            <select name="Model.RoleName" class="form-control">
                                @foreach (var item in Model.Roles)
                                {
                                    <option  value="@item.RoleName">@item.RoleName </option>
                                }


                            </select>


                        </div>
                    </div>

                    <div class="col-lg-12 ">
                        <div class="form-group d-flex justify-content-start">
                            @Html.LabelFor(a=>a.StatusInAdminMenu)
                            <select name="Model.StatusInAdminMenu" class="form-control">
                                <option value="false">غیر فعال</option>
                                <option value="true">فعال</option>

                            </select>


                        </div>
                    </div>
                    <div class="col-lg-12 ">
                        <div class="form-group d-flex justify-content-start">
                            @Html.LabelFor(a=>a.StatusInUserMenu)
                            <select name="Model.StatusInUserMenu" class="form-control">
                                <option value="false">غیر فعال</option>
                                <option value="true">فعال</option>

                            </select>

                        </div>
                    </div>
                    <div class="col-lg-12 ">
                        <div class="form-group d-flex justify-content-start">
                            @Html.LabelFor(a=>a.StatusInMainMenu)
                            <select name="Model.StatusInMainMenu" class="form-control">
                                <option value="false">غیر فعال</option>
                                <option  value="true">فعال</option>

                            </select>

                        </div>
                    </div>
                    @*                    <div class="col-lg-12">
                    <div class="form-group">

                    <input class="rangeslider1" data-extra-classes="irs-outline" name="@(nameof(Model.Order))" type="text">

                    </div>
                    </div>*@
                    <input type="submit" class="btn btn-success col-md-2 mt-3" value="ثبت" />
                    <a onclick="history.back()" class="btn btn-danger col-md-2 mt-3 mx-2">انصراف</a>

                </div>
            </form>
        </div>
    </div>
</div>

