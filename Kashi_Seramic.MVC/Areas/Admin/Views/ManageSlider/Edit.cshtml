


@model Kashi_Seramic.MVC.Models.Slider.UpdateSliderVM

@{
    ViewBag.title = " ویرایش دسته جدید";
    ViewBag.keywords = "آموزشکده آرایشگران,اموزشگاه آرایش,آرایشگر,نمونه کار,ام البنین صفری,بیوتی صفری,صفری,ساری,مازندران,مازندران ساری,ایران,آرایشگران ";
    ViewBag.author = "ام البنین صفری";
    ViewBag.description = "-با میدیریت صفری من  ام البنبن صفری هستم  و برند صفری بیوتی در اختیار من است آموزشگاه آرایشگری به صورت حضوری و مجازی برگزار میشود با مدرک فنی حرفه ای";
    ViewBag.robot = "noindex,nofollow";
    ViewBag.socialmedia = false;
    ViewBag.link = "https://www.omolbininsafaribeauty.com";
    ViewBag.imageurl = "https://www.omolbininsafaribeauty.com/";
    ViewBag.username = "noosignalls";

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" dir="rtl">
    <div class="card" dir="rtl">
        <div class="card-header">
            <h3 class="card-title">ویرایش اسلایدر</h3>
        </div>
        <div class="card-body pb-2 ">
            <form class="needs-validation was-validated" action="/Admin/ManageSlider/Edit" method="post" enctype="multipart/form-data">
                <div class="row row-sm">
                    @*  @Html.HiddenFor(a=>a.Id)*@
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input name="Model.Title" value="@Model.Title" class="form-control mb-4 is-invalid state-invalid" type="text" required placeholder="اسلایدر را وارد کنید..." />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input name="Model.Order" value="@Model.Order" class="form-control mb-4 is-invalid state-invalid" type="text" required placeholder="اولویت اسلایدر را وارد کنید..." />
                        </div>
                    </div>

                    <textarea name="Model.Text" id="summernote">
                        @Model.Text
                    </textarea>
                    <div class="col-lg-4 col-sm-12 mb-4 mb-lg-0">
                        <label for="fileslider">تصویر برای اسلایدر jpg 272*488</label>
                        <input type="file" name="Model.FileHeader" id="fileslider" class="dropify" data-bs-height="180" />
                    </div>
                    <input type="submit" class="btn btn-success col-md-2 mt-3" value="ثبت" />
                    <input type="hidden" name="Model.Id" value="@Model.Id" />
                    <a onclick="history.back()" class="btn btn-danger col-md-2 mt-3 mx-2">انصراف</a>

                </div>
            </form>
        </div>
    </div>
</div>

